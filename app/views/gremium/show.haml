.row-fluid
  .span12
    %h1=@gremium.title
    .row-fluid
      .span4
        %table.table.table-condensed{style: "border-left: 5px solid #{@gremium.color}"}
          %tr
            %td="#{@gremium.vorlagen_count} Vorlagen"
          %tr
            %td.notification
              %button#notif{class: "btn btn-info"} Abonieren
              #notification{style: "display:none;"}
                = render partial: "notifications/form", locals: { model: "Gremium", model_id: @gremium.id }

.row-fluid
  .span6
    %h3 NÃ¤chste Sitzungen
    = render partial: "sitzung/list_details", locals: { sitzungen: @gremium.sitzung.kommende, klass:"kommende" }
    %h3 Letzte Sitzungen
    = render partial: "sitzung/list_details", locals: { sitzungen: @gremium.sitzung.abgelaufende.limit(5), klass:"abgelaufende" }
  .span6
    %h3 Vorlagen
    = render partial: "vorlage/list", locals: { vorlagen: @gremium.vorlagen, gremium: @gremium }
